<odoo>
    <data>
        <record model="ir.ui.view" id="pos_config_view_form_inherit">
            <field name="name">pos_config_view_form_inherit list</field>
            <field name="model">pos.config</field>
            <field name="inherit_id" ref="point_of_sale.pos_config_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@id='title']" postion="after">
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="visible_backspace_btn"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="visible_backspace_btn"/>
                            <div class="text-muted mb16">
                                Show Backspace Button or Hide it..
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>